<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorWhite"
		tools:context=".MainActivity">
	<ImageView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/imageView"
			app:srcCompat="@mipmap/ic_launcher"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/tvName"
			android:layout_marginBottom="24dp"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="8dp"/>
	
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="陈艳红"
			android:id="@+id/tvName"
			tools:textColor="@android:color/background_dark"
			android:textSize="32sp"
			android:textStyle="bold"
			android:gravity="center_vertical"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="8dp"
			app:layout_constraintStart_toStartOf="@+id/tvDepartment"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginBottom="32dp"
			app:layout_constraintBottom_toTopOf="@+id/tvDepartment"/>
	
	<TextView
			android:text="单位"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvDepartment"
			android:textSize="20sp"
			app:layout_constraintStart_toStartOf="@+id/tvBuMen"
			android:layout_marginBottom="24dp"
			app:layout_constraintBottom_toTopOf="@+id/tvBuMen"
	/>
	<TextView
			android:text="广东供电局"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvDp"
			app:layout_constraintLeft_toRightOf="@+id/tvDepartment"
			app:layout_constraintStart_toEndOf="@+id/tvDepartment"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="16dp"
			android:textSize="22sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvDepartment"
			app:layout_constraintHorizontal_bias="0.05"/>
	<TextView
			android:text="部门"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvBuMen"
			android:textSize="20sp"
			app:layout_constraintStart_toStartOf="@+id/tvNumber"
			android:layout_marginBottom="24dp"
			app:layout_constraintBottom_toTopOf="@+id/tvNumber"/>
	<TextView
			android:text="市场营销部"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvBM"
			app:layout_constraintLeft_toRightOf="@+id/tvBuMen"
			app:layout_constraintEnd_toEndOf="@+id/tvJob"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="16dp"
			android:textSize="22sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvBuMen"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="@+id/tvDp"/>
	<TextView
			android:text="职位"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			
			android:id="@+id/tvJob"
			app:layout_constraintStart_toEndOf="@+id/tvBuMen"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvBuMen"/>
	
	<TextView
			android:text="销售"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvJB"
			app:layout_constraintLeft_toRightOf="@+id/tvJob"
			app:layout_constraintStart_toEndOf="@+id/tvJob"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="16dp"
			android:textSize="22sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvJob"
			app:layout_constraintHorizontal_bias="0.056"/>
	<TextView
			android:text="工号"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			
			android:id="@+id/tvNumber"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="288dp"
			android:layout_marginRight="288dp"
			android:layout_marginBottom="60dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginStart="32dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="32dp"
			app:layout_constraintHorizontal_bias="0.0"/>
	<TextView
			android:text="000XXXX"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvGH"
			app:layout_constraintLeft_toRightOf="@+id/tvBuMen"
			android:textSize="22sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvNumber"
			app:layout_constraintStart_toStartOf="@+id/tvDp"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="8dp"
			app:layout_constraintHorizontal_bias="0.0"/>
	<ImageView
			android:layout_width="84dp"
			android:layout_height="60dp"
			android:id="@+id/imageView3"
			android:src="@mipmap/ic_ok"
			app:layout_constraintBottom_toBottomOf="@+id/textView"
			app:layout_constraintTop_toTopOf="@+id/textView"
			app:layout_constraintStart_toEndOf="@+id/textView"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"/>
	<TextView
			android:text="识别结果 "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView"
			android:textSize="24sp"
			app:layout_constraintStart_toEndOf="@+id/tvName"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="@+id/tvName"
			app:layout_constraintBottom_toBottomOf="@+id/tvName"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="8dp"
			app:layout_constraintHorizontal_bias="0.3"/>
	<TextView
			android:text="通过"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvResult"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			app:layout_constraintTop_toTopOf="@+id/imageView3"
			app:layout_constraintBottom_toBottomOf="@+id/imageView3"
			app:layout_constraintStart_toEndOf="@+id/imageView3"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			app:layout_constraintHorizontal_bias="0.02"
			android:textStyle="bold"
			android:textColor="@android:color/black"/>

</android.support.constraint.ConstraintLayout>