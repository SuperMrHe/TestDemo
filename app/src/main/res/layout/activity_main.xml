<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/imageView"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			app:srcCompat="@mipmap/ic_launcher"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
			app:layout_constraintBottom_toTopOf="@+id/tvName" android:background="@color/colorAccent"/>
	
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="陈艳红"
			app:layout_constraintLeft_toLeftOf="parent"
			android:id="@+id/tvName"
			tools:textColor="@android:color/background_dark" android:textSize="36sp" android:textStyle="bold"
			app:layout_constraintStart_toStartOf="@+id/tvDepartment"
			android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/tvDepartment"
	/>
	
	<TextView
			android:text="单位"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvDepartment"
			android:textSize="22sp"
			app:layout_constraintStart_toStartOf="@+id/tvBuMen"
			android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/tvBuMen"
	/>
	<TextView
			android:text="广东供电局"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvDp"
			app:layout_constraintLeft_toRightOf="@+id/tvDepartment"
			app:layout_constraintStart_toEndOf="@+id/tvDepartment"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="16dp"
			android:textSize="24sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvDepartment"
			app:layout_constraintHorizontal_bias="0.05"/>
	<TextView
			android:text="部门"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvBuMen"
			android:textSize="22sp"
			app:layout_constraintStart_toStartOf="@+id/tvNumber"
			android:layout_marginBottom="24dp"
			app:layout_constraintBottom_toTopOf="@+id/tvNumber"/>
	<TextView
			android:text="市场营销部"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvBM"
			app:layout_constraintLeft_toRightOf="@+id/tvBuMen"
			app:layout_constraintEnd_toEndOf="@+id/tvJob"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="16dp"
			android:textSize="24sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvBuMen"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="@+id/tvDp"/>
	<TextView
			android:text="职位"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			
			android:id="@+id/tvJob" app:layout_constraintStart_toEndOf="@+id/tvBuMen"
			android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvBuMen"/>
	
	<TextView
			android:text="销售"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvJB"
			app:layout_constraintLeft_toRightOf="@+id/tvJob"
			app:layout_constraintStart_toEndOf="@+id/tvJob"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginRight="16dp"
			android:textSize="24sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvJob"
			app:layout_constraintHorizontal_bias="0.056"/>
	<TextView
			android:text="工号"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			
			android:id="@+id/tvNumber"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="288dp" android:layout_marginRight="288dp"
			android:layout_marginBottom="60dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
			app:layout_constraintHorizontal_bias="0.0"/>
	<TextView
			android:text="000XXXX"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tvGH"
			app:layout_constraintLeft_toRightOf="@+id/tvBuMen"
			android:textSize="24sp"
			android:textColor="@android:color/background_dark"
			app:layout_constraintBaseline_toBaselineOf="@+id/tvNumber"
			app:layout_constraintStart_toStartOf="@+id/tvDp"
			android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>